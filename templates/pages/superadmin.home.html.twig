<h1>Administrateur</h1>
<div class="container mx-auto">
    {% for classroom in classrooms%}
        <div class="col">
            <div class="card">
                <h5 class="card-header" style="text-align: center">
                    {{ classroom.name }}
                    <a href="{{ path('edit_classroom', {'classroom_id': classroom.id}) }}"><i data-feather="edit"></i></a>
                </h5>
                <div class="card-body" style="text-align: center">
                    <h5 class="card-title" style="text-align: center">{{ classroom.teacher.name }} {{ classroom.teacher.firstname }}</h5>
                    <p class="card-text" style="text-align: center">Le {{ classroom.startat | date('d/m/Y') }} de {{ classroom.startat | date('h:i') }} Ã  {{ classroom.endat | date('h:i') }}</p>
                    <a href="{{ path('showqrcode', {'classroom_id' : classroom.id}) }}" class="btn btn-primary">Afficher le QR code</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>