{% extends 'base.html.twig' %}
{% block body %}
    <h1>Ajouter un utilisateur</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur', 'attr' : {'placeholder': 'Nom d\'utilisateur...'}}) }}
    {{ form_row(form.name, {'label' : 'Nom', 'attr' : {'placeholder': 'Nom...'}}) }}
    {{ form_row(form.firstname, {'label' : 'Prénom', 'attr' : {'placeholder': 'Prénom...'}}) }}
    {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder': 'Mot de passe...'}}) }}
    {{ form_row(form.rolechoice, {'label' : 'Rôle', 'attr' : {'placeholder': 'Choisissez le rôle...'}}) }}
    {{ form_row(form.groupchoice, {'label' : 'Groupe', 'attr' : {'placeholder': 'Choisissez un groupe...'}}) }}
    <button type="submit" class="btn btn-success">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}